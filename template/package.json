{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "<%= description %>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/<%= username %>/<%= name %>",
    "type": "git"
  },
  "homepage": "https://github.com/<%= username %>/<%= name %>",
  "bugs": "https://github.com/<%= username %>/<%= name %>",
  "main": <% if (compile) { %>"dist/<%= name %>.common.js"<% } else { %>"index.js"<% } %>,
  <% if (compile) { %>"browser": "dist/<%= name %>.js",
  "jsnext:main": "dist/<%= name %>.es.js", <% } %> <% if (cli) { %>
  "bin": "cli.js", <% } %>
  "files": [
    <% if (compile) { %>"dist"<% } else { %>"index.js"<% } %><% if (cli) { %>,
    "cli.js"<% } %>
  ],
  "scripts": {
    "test": "<% if (unitTest) { %>jest<% } else { %>echo 'nope'<% } %>",
    "lint": "standard <% if (compile) { %>'src/**/*.js'<% } else { %>index.js<% } %>",
    "lint:fix": "npm run lint -- --fix",<% if (compile) { %>
    "build": "bili --format cjs --format es --format umd --compress",<% } %>
    "start": "npm run test",
    "pretest": "npm run format && npm run lint:fix",
    "format": "prettier --print-width 100 --semi false --single-quote --write <% if (compile) { %>'src/**/*.js'<% } else { %>index.js<% } %>",
    "precommit": "npm test",<% if (compile) { %>
    "prepublish": "npm run build",<% } %>
    "release": "npm test && git commit -am $npm_package_version && git tag $npm_package_version && git push --tags && npm publish"
  },
  "author": "<%= username %> <<%= email %>>",
  <%_ if (compile) { -%>
  "babel": {
    "presets": [
      ["env"]
    ]
  },
  <%_ } -%>
  "devDependencies": {<% if (unitTest) { %>
    "jest": "^20.0.1",<% } %>
    "standard": "^10.0.2", <% if (compile) { %>
    <%_ if (unitTest) { -%>
    "babel-preset-env": "^1.4.0",
    <%_ } -%>
    "bili": "^0.15.0",<% } %>
    "husky": "^0.13.3",
    "prettier": "~1.3.1"
  }
}
